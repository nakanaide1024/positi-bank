<%= render "shared/create_header" %>
<div class='main'>
  <div class="all-letters-view">
    <p><span>感謝状</span></p>
    <div class="all-letters-view-box">
      <div class="blogs-ones-title">
        <h3><%= @letters.address.user.nickname %>さんへ</h3>
      </div>
      <div class="blogs-ones-text">
        <%= @letters.thanks %>
      </div>
      <div class="blogs-ones-option">
        <div class="blogs-ones-options-box">
          <%= link_to "編集する", class:"blogs-ones-edit-btn" %>
          <%= link_to "削除する", class:"blogs-ones-delete-btn" %>
        </div>
      </div>
    </div>
    <%= link_to "戻る", posits_path%>
  </div>
</div>  
<%= render "shared/footer"%>